{% layout none %}
{
  "items": [
    {%- for item in cart.items -%}
      {
        "id": {{ item.id }},
        "properties": {
          {% for property in item.properties %}
            {{ property.first | json }}: {{ property.last | json }}
            {% unless forloop.last %},{% endunless %}
          {% endfor %}
        },
        "taxable": {{ item.taxable }},
        "quantity": {{ item.quantity }},
        "variant_id": {{ item.variant_id }},
        "title": {{ item.title | json }},
        "price": {{ item.price }},
        "original_price": {{ item.original_price }},
        "discounted_price": {{ item.discounted_price }},
        "line_price": {{ item.line_price }},
        "original_line_price": {{ item.original_line_price }},
        "sku": {{ item.sku | json }},
        "vendor": {{ item.product.vendor | json }},
        "product_id": {{ item.product_id }},
        "final_price": {{ item.final_price }},
        "final_line_price": {{ item.final_line_price }},
        "product_type": {{ item.product.type | json }},
        "product_title": {{ item.product.title | json }},
        "collection": {{ item.product.collections | map: 'id' | json }},
        "tags": {{ item.product.tags | json }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}